isr: ; subrotina de interrupção

	mov		r0,-(r6)  ; 1)Salva registradores
	mov		r1,-(r6)
	mov		r2,-(r6)
	mov		r3,-(r6)
	mov		r4,-(r6)
	mov		r5,-(r6)

				  ; 2)Lógica 
	
	mov INTS, r0    
			; verifica se a interrupção é do teclado (máscara)
	mov r0, r1
	and #2, r1      ; (se acender a flag z=1, beq vai para checar se foi int do timer, não foi int do teclado)
	beq checa_timer	
	
	jsr r7, isr_tec 	; do contrário, faz o tratamento da interrupção de teclado
	and #hfffd, ints	; desliga bit de INT TECLADO (pra poder detectar futuras interrupções)
	jmp fim_isr

checa_timer:
			;verifica se a interrupcão é do timer 
	mov r0, r1
	and #1, r1	
	beq fim_isr	;se nao for, vai pro fim. Do contrario, segue para a rotina de tratamento para o timer
	
	jsr r7, isr_tim
	and #hfffe, ints	; desliga o bit de INT TIMER 

fim_isr:
	mov		(r6)+,r5	;3) Retorna os registradores da pilha
	mov		(r6)+,r4
	mov		(r6)+,r3
	mov		(r6)+,r2
	mov		(r6)+,r1
	mov		(r6)+,r0

	rti   ; sai da interrupção

isr_tec:   ;2)
	
	mov TECDT, tecla ; atribui à variável "tecla" o dado digitado 					
	clr TECST    	 ; limpa o status, para poder pegar outras teclas futuramente			
	rts r7		 ; retorna 								

isr_tim:	
	inc tick 		; incrementa o tick	
	cmp tick, #4 		; se o tick for igual a 4 (1seg) faz os calculos, do contrario vai pro fim
	beq robo_1_isr
	jmp fim_isr_tim
			
robo_1_isr:			; procura quais robos estao ativos, para realizar os calculos
	
	clr tick		; já limpa o tick para futuras interrupcoes

	cmp robo1, #1		;r2 RECEBE ENDERECO DO ROBO, r3 PERCORRERÁ O VETOR DO ROBO, r4 E r5 COMO OS OPERANDOS (V E POSIC)
	bne robo_2_isr
	
	mov #robo1, r2	
	jsr r7, calculo_isr

robo_2_isr:
	cmp robo2, #1
	bne robo_3_isr

	mov #robo2, r2
	jsr r7, calculo_isr
	
robo_3_isr:
	cmp robo3, #1
	bne robo_4_isr

	mov #robo3, r2
	jsr r7, calculo_isr

robo_4_isr:
	cmp robo4, #1
	bne fim_isr_tim

	mov #robo4, r2
	jsr r7, calculo_isr
	
fim_isr_tim:	
	cmp flag_nhrl, #0
	beq return_isr_tim
	inc flag_nhrl
	
return_isr_tim:
	rts r7

calculo_isr:		; recebe r2 como parametro (endereco do robo)
			; Direcao x:
	mov r2, r3	; move o endereco para r3
	add #18, r3	; r3 tem o endereco de Vx agora
	mov (r3), r4	; armazena o valor de Vx em r4
	add #4, r3	; r3 tem o endereco de posicX agora
	mov (r3), r5	; armazena o valor de posicX
	
	add r4, r5	; faz a soma posicX = posicX + Vx
	
limite_sup_x_isr:
	cmp r5, #9999		; ve se o valor superou o limite. Se sim, atribui o limite ao valor e zera a velocidade na direcao
	blt limite_inf_x_isr
	mov #9999, r5
	
	jmp fim_calculo_x_isr

limite_inf_x_isr:
	cmp r5, #-9999	
	bgt fim_calculo_x_isr	
	mov #-9999, r5

	jmp fim_calculo_x_isr

fim_calculo_x_isr:
	mov r5, (r3)	; salva o novo valor de posicX no espaco adequado do robo


			;Direcao y:
	mov r2, r3	
	add #20, r3
	mov (r3), r4
	add #4, r3
	mov (r3), r5

	add r4, r5
	
limite_sup_y_isr:
	cmp r5, #9999		; ve se o valor superou o limite. Se sim, atribui o limite ao valor e zera a velocidade na direcao
	blt limite_inf_y_isr
	mov #9999, r5
	

	jmp fim_calculo_y_isr

limite_inf_y_isr:
	cmp r5, #-9999	
	bgt fim_calculo_y_isr	
	mov #-9999, r5

	jmp fim_calculo_y_isr

