inicio: ; zera os atributos dos robôs, variáveis, registradores, ajusta as interrupções e atribui o número de cada robo como string numa posicao dos seus vetores
	clr r1
	clr r2
	clr r3
	clr r4
	clr r5
	mov #STACK, r6
	
	
	loop_inicio: ; Loop para zerar as minhas variáveis
		clr robo1(r0)
		add #2, r0
		cmp r0, #170   ; 85 palavras, 170 bytes
		blt loop_inicio   
	clr r0

	mov #14, r0		; atribuicao da palavra 7 de cada robô
	mov #'1', robo1(r0)
	mov #'2', robo2(r0)
	mov #'3', robo3(r0)
	mov #'4', robo4(r0)
	clr r0
	
	mov #isr, IVET 		; Seta a rotina de interrupção
	mov #250, TIMDT		; Set timer para interromper a cada 250ms 
	clr TECST  		; Reseta estado do hardware do teclado
	clr INTS   		; Reseta pedidos de interrupcao

	mov #h83, INTE 		; habilita interrupcoes de teclado e timer (1000 0010)
	mov #-1, tecla  	; valor padrão pra tecla (nada acontece)
	

