;-------------------------------------------------------------------------------------------------------------------------------------INT2STR
int2str:
	MOV	2(R6),R1				;Ponteiro da string de saída
	MOV	4(R6),R2				;Número inteiro a ser convertido
	
	BPL	EhPositivo				;Se o número é positivo pula o tratamento de colocar o "-" no inicio do buffer

	NEG	R2					;Transforma o número que queremos a string em positivo, se ele for negativo
	
	MOV	-1(R1),R0				;Prepara para escrever o "-" antes dos números da string
	AND	#HFF00,R0 				;Zera o byte menos significativo para eventualmente receber o negativo
	OR	#'-',R0					;Coloca o "-" no byte menos significativo do R0
	MOV	R0,-1(R1)				;Coloca esse "-" no começo da string
	INC	R1					;Passa efetivamente para a primeira posição dos números na string
					

EhPositivo:
	MOV	R2,-(R6)				;Empilha o número a ser convertido, já obrigatoriamente positivo, para a chamada da próxima função que de fato
	MOV	R1,-(R6)				;Empilha o endereço de escrita da string
	JSR	R7,uint2str				;Função que de fato transforma esse número para string
	ADD	#4,R6					;Atualiza a stack pointer para desempilhar os dois endereços usados na chamada da subrotina
	
	RTS	R7			; }
	

;**********************************************************
; void uint2str(char *s, uint n)
;	2(R6) -> s -> R1
;	4(R6) -> n -> R2
;
;	Lacos  -> R5
;	pTab10 -> R4
;	dig    -> R3
;
;**********************************************************
Tab10:		DAW	10000, 1000, 100, 10
uint2str:
	MOV	2(R6),R1				;Coloca o endereço da string de destino em R1
	MOV	4(R6),R2				;Pega o número a ser convertido 

	MOV	#Tab10,R4				;Coloca o ponteiro para Tab10(tabela de divisores) em R4
	MOV	#4,R5					;Como temos suporte para números até a casa do 10000, definimos 4 laços, o que também ocorre porque é definido que o tamanho máximo que pode ser convertido é de 6, sendo 1 espaço para o "-" e outro para o terminador nulo, o que totaliza 6 espaços
	
Loop:				
	MOV	#'0',R3				;R3 começa no "0" em ascii, e cada vez que o divisor é incrementado em 1 passamos para o próximo número em ASCII

LoopInterno:
	CMP	R2,(R4)				;Compara n com Tab10, que começa em 10
	BLT	EhMenor				;Se n for menor que o divisor, sai do loop interno
	INC	R3					;Se não for menor passa para o próximo número em ASCII
	SUB	(R4),R2		 		;Subtrai do número que queremos converter o número que estamos atualmente na tabela. Então, por exemplo se queremos o 30000, fazemos 30000-10000, porque começamos no 10000 no TAB, agora n passa a ser 20000
	JMP	LoopInterno	 		;Volta para o loop interno para continuar fazendo os descontos do número que queremos em relação a tabela

EhMenor:
	MOV	-1(R1),R0				;Se o número for menor, ou seja, se estamos em 9000, e o valor da tabela era 10000, caimos aqui, o que significa que temos que passar para o próximo número da tabela
	AND	#HFF00,R0				;Limpa o byte menos significativo de onde vamos inserir o número
	OR	R3,R0					;Coloca o número que calculamos no loop interno no R0
	MOV	R0,-1(R1)				;Escreve no endereço atual esse número 
	INC	R1					;Passa para o próxima posição que devemos escrever o número
	
	ADD	#2,R4					;Avança para a próxima posição da Tab10

	SOB	R5,Loop				;Decrementa R5 (que é a quantidade de números que devemos analisar), se não for 0, volta para o loop
	
	ADD	#'0',R2				;Converte a casa das unidades (última a ser analisada) para string
	MOV	-1(R1),R0				
	AND	#HFF00,R0				
	OR	R2,R0
	MOV	R0,-1(R1)
	INC	R1
	
	MOV	-1(R1),R0				;Garante a colocação do terminador NULL(byte completamente zerado) ao final da string		
	AND	#HFF00,R0
	MOV	R0,-1(R1)
	
	RTS	R7


