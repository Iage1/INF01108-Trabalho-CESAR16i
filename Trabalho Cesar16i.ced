funcao_n:
	; verificar qual o primeiro da ordem que não está ativo, para ativar

	mov #-1, tecla   ; volta o valor de tecla pra -1 já ao entrar na função (necessário pra não executar várias vezes)

	mov #robo1, r0		; armazena o endereco do robo no registrador r0	
	mov #'1', varCharN  	; move o char correspondente ao numero do robo para uma variavel
	cmp robo1, #0 		; checa se o bit de atividade do robô é 1/0 (ativo/desativo)
	beq ativacao	  	; se estiver desativado, ativa, do contrario checa o proximo

	mov #robo2, r0
	mov #'2', varCharN
	cmp robo2, #0
	beq ativacao

	mov #robo3, r0
	mov #'3', varCharN
	cmp robo3, #0
	beq ativacao

	mov #robo4, r0	
	mov #'4', varCharN	
	cmp robo4, #0
	beq ativacao
	
	mov #1, flag_nhrl 

loop_nhrl:
	jsr r7, display_nao_ha_robos_livres	; se nenhum dos robos pode ser ativado, mostra a mensagem de "nao ha robos livres"
	cmp flag_nhrl, #9
	bne loop_nhrl
	
	clr flag_nhrl
	clr r0
	clr varCharN
	jmp main
	


ativacao:

	jsr r7, le_nome ; rotina para tratar a questao do nome 
	
	jsr r7, selecao_na_ativacao 	; rotina pra tratar uma possivel selecao automatica na ativacao do robo (se ele for o unico ativo)
		
	mov #1, (r0) 	; acende a flag de ativado no robo: move #1 pro endereço do endereço armazenado em roboTemp
	
	clr varCharN	; resseta as variáveis e registradores usados
	clr r0
	jmp main

le_nome:
	; se for a primeira ativacao do robo, vai informar o numero do robo, e solicitar ao usuário o nome do robo (5char, tratamento de backspace, finaliza com enter)
	; R0 TEM O ENDERECO BASE DO ROBO, E R1 VAI SER COMO UM REGISTRADOR TEMPORARIO PARA ACESSAR OS OUTROS ENDERECOS, COMO UM MODO INDEXADO

	
	;mov r0, r1	; verifica se a flag de primeira ativação (palavra 8) é 1: se for, pula a rotina, do contrário continua
	;add #16, r1	;Isso seria para nao mudar o nome na reativacao (teria que nao zerar os nomes na funcao_r tambem
	;cmp (r1), #1	
	;beq retorna_le_nome
	
	jsr r7, display_inserir_nome_do_robo 	; display informa o nome do robo e pede que usuário digite
	mov #16, r3				; r3 será usado para percorrer o visor (comecando na casa 16)
	mov #4, r2				; r2 será usado para percorrer o robo e armazenar os char do seu nome
					
	loop_le_nome:
		cmp tecla, #-1 ; ve se o valor de tecla é -1 se for, continua no loop (muda nada)
		beq loop_le_nome  
		
		cmp tecla, #h0D	; compara a tecla com o enter, pra ver se dá pra sair do loop
		beq retorna_le_nome

		cmp tecla, #h08 ; tratamento de backspace
		beq tratamento_backspace
		
		cmp r3, #20			; se r3 for maior que 20 (5 char), pula a escrita no visor e no robo
		bgt continua_loop_le_nome
			
		mov r0, r1		; armazena o char no endereco apropriado do robo, e incrementa 2 (prox palavra)
		add r2, r1			
		mov tecla, (r1)
		inc r2
		inc r2
		
		mov tecla, VISOR(r3)  ; escreve no visor e incrementa um (prox bloco do visor)
		inc r3
		
	continua_loop_le_nome:
		mov #-1, tecla
		jmp loop_le_nome 
	
	tratamento_backspace:
		cmp r3, #16		;se r3 for menor ou igual a 16 (inicio do campo do usuario), ignora o backspace
		ble fim_backspace
		
		dec r2			;volta na ultima palavra escrita nos enderecos do robo e limpa
		dec r2
		mov r0, r1		
		add r2, r1
		clr (r1)
		
		dec r3			;volta no ultimo bloco do visor e limpa
		clr VISOR(r3)
	
	fim_backspace:
		mov #-1, tecla
		jmp loop_le_nome

retorna_le_nome:
	mov r0, r1, 	; ativa a flag de primeira ativação: robo agora já foi acionado pela primeira vez
	add #16, r1	; (palavra 8)
	mov #1, (r1)
	mov #-1, tecla
	clr r1		; nao dar clr no r0
	clr r2
	clr r3
	clr r4
	clr r5
	rts r7

selecao_na_ativacao:	; checar se nao ha nenhum robo ativo, pra já selecionar aquele que sera ativado na volta da funcao
			; nao alterar r0

	cmp robo1, #1	; se ele verificar que já existe robo ativo, já pula pro final. Do contrario continua verificando
	beq fim_selecao_na_ativacao
	
	cmp robo2, #1
	beq fim_selecao_na_ativacao

	cmp robo3, #1
	beq fim_selecao_na_ativacao
	
	cmp robo4, #1
	beq fim_selecao_na_ativacao
	
	mov r0, r1	; já seleciona o robo que sera ativo na volta da funcao
	add #2, r1
	mov #1, (r1)
	
	
fim_selecao_na_ativacao:
	clr r1
	rts r7
	
	
